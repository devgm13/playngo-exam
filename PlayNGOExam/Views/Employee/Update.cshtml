@model PlayNGOExam.Models.Employee

@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update Employee</h2>

<form method="post" style="margin: 5% 0 0">
    <div class="float-left">
        <p>Firstname</p>
        <p>Lastname</p>
        <p>Phonenumber</p>
    </div>
    <div class="float-right">
        <input type="text" style="margin: 1px 0 2px" name="firstname" value="@Model.Firstname" /><br />
        <input type="text" style="margin: 1px 0 2px" name="lastname" value="@Model.Lastname" /><br />
        <input type="text" style="margin: 1px 0 2px" name="phonenumber" value="@Model.Phonenumber" /><br />
        <input type="submit" value="Save" />
    </div>
</form>

<p>
    @if (ViewBag.Submitted != null && ViewBag.Submitted)
    {
        // If the form was submitted
        @ViewBag.Message
    }
</p>